{
  "name": "configuration",
  "version": "0.2.0",
  "description": "JavaScript Application Configuration Management",
  "author": "metauro",
  "license": "MIT",
  "keywords": [
    "conf",
    "config",
    "configuration",
    "environment",
    "env",
    "enviroment"
  ],
  "main": "./index.js",
  "types": "./index.d.ts",
  "typings": "./index.d.ts",
  "homepage": "https://github.com/metauro/configuration#readme",
  "bugs": {
    "url": "https://github.com/metauro/configuration/issues",
    "email": "w278206624@gmail.com"
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/metauro/configuration"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p ./tsconfig.json",
    "postbuild": "rimraf ./index.js ./index.d.ts && tsc -d index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepublish": "npm run format && npm run build",
    "release": "standard-version"
  },
  "dependencies": {
    "app-root-path": "^2.2.1",
    "lodash.merge": "^4.6.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/inquirer": "^6.0.3",
    "@types/jest": "^23.3.13",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^10.12.18",
    "@types/node-rsa": "^1.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "standard-version": "^8.0.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
